<body>
    <main>
        <div id="everything">
        <h1 class="title">Connect Four</h1>
        <div id="players">
        <div id="playerOne">
            <h3><%=(typeof user.firstName != "undefined" ? user.firstName : "Player") + " " + (typeof user.lastName != "undefined" ? user.lastName : "One")%></h3>
            <h5>Number of wins: <% if (user.wins==0 || user.wins) { %>
                <%=user.wins%>
            <% } else { %>
            <% ""}%></h5>
            <a href="/users/<%= typeof user.firstName != 'undefined' ? 'logout' : 'login' %>"><button><%= typeof user.firstName !='undefined' ? 'Logout' : 'Login' %></button></a>
            <a href="/users/register"><button>Register New User</button></a>
        </div>
        <div id="playerTwo">
            <h3>Guest</h3>
            <label for="guestName">Enter name for guest:</label>
            <br>
            <input type="text" id="guestName" value="<%= typeof guestName != 'undefined' ? guestName : 'Guest' %>">
        </div>
        </div>
        <a href="/game" id="playBtn"><button>Start Game</button></a>
        <a href="/scoreboard"><button>Scoreboard</button></a>
        </div>
    </main>
